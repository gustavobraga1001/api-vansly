generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  password_hash String
  created_at    DateTime   @default(now())
  driver        Driver?
  contracts     Contract[]

  @@map("users")
}

model Driver {
  id  String @id @default(uuid())
  cnh String @unique
  cpf String @unique

  user         User          @relation(fields: [user_id], references: [id])
  user_id      String        @unique
  contracts    Contract[]
  announcement Announcement?
  vehicle      Vehicle[]

  @@map("drivers")
}

model Contract {
  id            String   @id @default(uuid())
  shift         String
  boarding      String
  landing       String
  institution   String?
  monthlyAmount Decimal
  status        Boolean
  created_at    DateTime @default(now())

  user      User   @relation(fields: [user_id], references: [id])
  driver    Driver @relation(fields: [driver_id], references: [id])
  user_id   String
  driver_id String

  @@map("contracts")
}

model Announcement {
  id    String  @id @default(uuid())
  title String
  stars Decimal
  city  String

  driver     Driver  @relation(fields: [driver_id], references: [id])
  vehicle    Vehicle @relation(fields: [vehicle_id], references: [id])
  driver_id  String  @unique
  vehicle_id String  @unique

  @@map("announcements")
}

model Vehicle {
  id    String @id @default(uuid())
  model String
  plate String
  mark  String
  year  String

  driver       Driver        @relation(fields: [driver_id], references: [id])
  Announcement Announcement?
  driver_id    String

  @@map("vehicles")
}

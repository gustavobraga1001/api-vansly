generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Period {
  MANHA
  TARDE
  NOITE
}

model User {
  id            String     @id @default(uuid())
  name          String
  email         String     @unique
  password_hash String
  created_at    DateTime   @default(now())
  driver        Driver?
  contracts     Contract[]
  absence       Absence[]

  @@map("users")
}

model Driver {
  id  String @id @default(uuid())
  cnh String @unique
  cpf String @unique

  user         User          @relation(fields: [user_id], references: [id])
  user_id      String        @unique
  contracts    Contract[]
  announcement Announcement?
  vehicle      Vehicle[]
  Route        Route[]

  @@map("drivers")
}

model Contract {
  id            String   @id @default(uuid())
  shift         Period
  boarding      String
  landing       String
  institution   String?
  monthlyAmount Decimal
  status        Boolean
  created_at    DateTime @default(now())

  user      User   @relation(fields: [user_id], references: [id])
  driver    Driver @relation(fields: [driver_id], references: [id])
  user_id   String
  driver_id String

  @@map("contracts")
}

model Announcement {
  id            String  @id @default(uuid())
  title         String
  stars         Decimal
  city          String
  monthlyAmount Decimal

  driver     Driver  @relation(fields: [driver_id], references: [id])
  vehicle    Vehicle @relation(fields: [vehicle_id], references: [id])
  driver_id  String  @unique
  vehicle_id String  @unique

  @@map("announcements")
}

model Vehicle {
  id    String @id @default(uuid())
  model String
  plate String
  mark  String
  year  String

  driver       Driver        @relation(fields: [driver_id], references: [id])
  Announcement Announcement?
  driver_id    String
  routes       Route[]

  @@map("vehicles")
}

model Absence {
  id              String   @id @default(uuid())
  date_of_absence DateTime

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("absences")
}

model Route {
  id     String   @id @default(uuid())
  date   DateTime
  period Period

  driver     Driver      @relation(fields: [driver_id], references: [id])
  vehicle    Vehicle     @relation(fields: [vehicle_id], references: [id])
  driver_id  String
  vehicle_id String
  RouteStop  RouteStop[]

  @@map("routes")
}

model RouteStop {
  id String @id @default(uuid())

  route    Route  @relation(fields: [route_id], references: [id])
  stop     Stop   @relation(fields: [stop_id], references: [id])
  route_id String
  stop_id  String
}

model Stop {
  id        String      @id @default(uuid())
  address   String
  status    Boolean
  routeStop RouteStop[]

  @@map("stops")
}
